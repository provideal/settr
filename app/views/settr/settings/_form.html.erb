<%= simple_form_for setting do |f| %>
  <%= f.input :key %>
  <%= f.input :value %>
  <%= f.input :typ, :as => :string %>
  <%= f.input :typ, :collection => ['string', 'text', 'boolean', 'integer', 'float', 'select'], :include_blank => false %>
  <%= f.input :alterable %>
  <%= f.submit %>
<% end %>

